<%- include('partials/header') %>

<div class="auth-container" style="max-width: 500px; margin: 0 auto; padding: 2rem 0;">
  <div class="card">
    <div class="card-header">
      <h2 class="text-center m-0">สมัครสมาชิกใหม่</h2>
    </div>
    
    <div class="card-body">
      <form action="<%= baseUrl %>register" method="POST">
        <div class="form-group">
          <label for="username" class="form-label">ชื่อผู้ใช้</label>
          <input type="text" id="username" name="username" class="form-control" required>
          <small class="form-text">ชื่อผู้ใช้จะถูกแสดงให้ผู้อื่นเห็นเมื่อคุณแชร์ทริป</small>
        </div>
        
        <div class="form-group">
          <label for="email" class="form-label">อีเมล</label>
          <input type="email" id="email" name="email" class="form-control" required>
        </div>
        
        <div class="form-group">
          <label for="password" class="form-label">รหัสผ่าน</label>
          <input type="password" id="password" name="password" class="form-control" required>
          <small class="form-text">รหัสผ่านต้องมีความยาวอย่างน้อย 8 ตัวอักษร</small>
        </div>
        
        <div class="form-group">
          <label for="confirmPassword" class="form-label">ยืนยันรหัสผ่าน</label>
          <input type="password" id="confirmPassword" name="confirmPassword" class="form-control" required>
        </div>
        
        <div class="form-group">
          <button type="submit" class="btn btn-primary btn-block">สมัครสมาชิก</button>
        </div>
      </form>
    </div>
    
    <div class="card-footer text-center">
      <p class="mb-0">มีบัญชีอยู่แล้ว? <a href="<%= baseUrl %>login">เข้าสู่ระบบ</a></p>
    </div>
  </div>
</div>

<%- include('partials/footer') %>